# Etherscan API 設定
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# 監控目標
TARGET_ADDRESS=0x8270400d528c34e1596EF367eeDEc99080A1b592
START_BLOCK=21526488

# Telegram Bot 設定
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# 管理員 Chat IDs（用逗號分隔，先用任意數字）
ADMIN_CHAT_IDS=999999999,another_admin_id

# 邀請碼（設定一個安全的邀請碼）
INVITE_CODE=ETH2025Monitor

# 伺服器設定
PORT=3000

# Render 設定 (部署後 Render 會自動提供)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# 部署環境
NODE_ENV=production
